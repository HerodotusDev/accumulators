{
  "name": "mmr",
  "private": true,
  "version": "1.0.0",
  "description": "A TypeScript implementation of Merkle Mountain Ranges",
  "keywords": [
    "merkle mountain range",
    "merkle mountain ranges",
    "merkle tree",
    "merkle trees",
    "mmrs",
    "mmr"
  ],
  "homepage": "https://github.com/HerodotusDev/merkle-mountain-range",
  "bugs": {
    "url": "https://github.com/HerodotusDev/merkle-mountain-range/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HerodotusDev/merkle-mountain-range.git"
  },
  "license": "GPL-3.0-or-later",
  "author": "Herodotus Dev Ltd",
  "scripts": {
    "postinstall": "yarn build",
    "build": "lerna run build",
    "test": "jest",
    "test:core": "yarn test packages/core",
    "test:hashes": "yarn test packages/hashes",
    "test:memory": "yarn test packages/memory",
    "test:rocksdb": "yarn test packages/rocksdb",
    "e:memory:start": "yarn --cwd ./examples/memory start",
    "e:memory:dev": "yarn --cwd ./examples/memory dev",
    "e:rocksdb:start": "yarn --cwd ./examples/rocksdb start",
    "e:rocksdb:dev": "yarn --cwd ./examples/rocksdb dev",
    "e:next-js": "yarn --cwd ./examples/next-js dev"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "jest": "^29.5.0",
    "lerna": "^6.5.1",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2",
    "ts-node": "^10.9.1"
